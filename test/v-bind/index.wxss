
.mod_box {
  margin: 0 16px 35px 16px;
  position: relative;
}
.mod_hd {
  margin: 30rpx 0;
}
.mod_title {
  font-size: 36rpx;
  line-height: 44rpx;
  font-weight: bold;
}

.short-video-feed-item {
  margin-bottom: 60rpx;
}
.last {
  margin-bottom: 0px;
}
.title {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000028;
  letter-spacing: 0;
}
.pic-cont {
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}
.pic_v {
  /* width: 192rpx; */
  /* flex: auto; */
  width: calc(100% - 494rpx);
  height: 272rpx;
  box-shadow: 0 3px 5px 0 rgba(12, 25, 33, 0.25);
  border-radius: 4px;
  margin-right: 14rpx;
  background: rgba(0, 0, 0, 0.15);
}
.pic-right {
  position: relative;
  /* margin-left: 14rpx; */
  /* flex: auto; */
  align-self: right;
}
.pic_h {
  background: rgba(0, 0, 0, 0.15);
  border-radius: 4px;
  height: 272rpx;
  width: 480rpx;
  display: block;
}
.player-ui {
  /* position: absolute; */
  /* width: 100%;
  height: 100%; */
  /* top: 0;
  left: 0; */
}
.play-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -40rpx;
  margin-top: -40rpx;
}
.time {
  position: absolute;
  bottom: 5px;
  right: 7px;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 13px;
  letter-spacing: 0;
  text-align: right;
  text-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
}
.cid-info {
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
}
.cid-title {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #ff6022;
  letter-spacing: 0;
  max-width: 100%;
}
.cid-others {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #848494;
  letter-spacing: 0;
  margin-left: 4px;
  min-width: 100rpx;
  flex: 1;
}
.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.tow-row-ellipsis {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-wrap: break-all;
  word-break: normal;
  line-height: 44rpx;
}
.after-play {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
}
.after-play .mod-pic-left {
  width: 56rpx;
  height: 80rpx;
  box-shadow: 0 1px 3px 0 rgba(12, 25, 33, 0.25);
  border-radius: 2px;
  position: relative;
}
.after-play .pic_v {
  width: 56rpx;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.after-play .mod-info-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
  max-width: calc(100% - 72rpx);
}
.triangle {
  width: 24rpx;
  height: 24rpx;
  margin-left: -12rpx;
  margin-top: -12rpx;
  top: 50%;
  left: 50%;
  position: absolute;
}
.new-cid-title {
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #ff6022;
  letter-spacing: 0;
  line-height: 18px;
}
.new-cid-others {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #848494;
  letter-spacing: 0;
  line-height: 14px;
}
.none {
  display: none !important;
}
@keyframes picExpand {
  from {
    transform: scale(0.7, 0.74);
    /* width: 480rpx; */
    /* height: 272rpx; */
    width: 686rpx;
    height: 386rpx;
  }
  to {
    width: 686rpx;
    height: 386rpx;
    transform: scale(1, 1);
  }
}
@keyframes cidAnimation {
  from {
    width: 192rpx;
    height: 272rpx;
  }
  to {
    width: 100%;
    height: 100%;
  }
}
.cid-shrink-animation {
  animation: cidAnimation 0.5s linear forwards;
}
.pic-expand-animation {
  transform-origin: right bottom;
  animation: picExpand 0.5s linear forwards;
}
.short-video-container {
  position: absolute;
  width: 100%;
}
